<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/Students">Student Management System</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <p> </p>
        </li>
      </ul>

      <form
        class="d-flex searchform"
        method="POST"
        action="/students"
        novalidate
      >
        <input
          class="form-control form-control-md me-2"
          size="100"
          type="search"
          placeholder="Search"
          name="search"
          aria-label="Search"
        />
        <button class="btn btn-outline-dark" type="submit">Search</button>
      </form>
      <div class="col-6 d-flex justify-content-end">
        <a
          href="/students/addstudent"
          type="button"
          class="btn btn-primary align-self-center"
        >+ Add Student</a>
      </div>
    </div>
  </div>
</nav>

{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Student has been removed.
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Middle Name</th>
      <th scope="col">Last Name</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.studentID}}</th>
        <td>{{this.StudentFirstName}}</td>
        <td>{{this.studentMiddleName}}</td>
        <td>{{this.studentLastname}}</td>
        <td class="text-end">
          <a
            href="/students/viewstudent/{{this.studentID}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-eye"></i> View</a>
          <a
            href="/students/editstudent/{{this.studentID}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-pencil"></i>
            Edit</a>
          <a
            href="/students/deletestudent/{{this.studentID}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-person-x"></i> Delete</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>